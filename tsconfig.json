{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node", "react", "react-dom"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*",
        "./src/*"
      ],
      "@/components/*": [
        "./components/*",
        "./src/components/*"
      ],
      "@/lib/*": [
        "./lib/*",
        "./src/lib/*"
      ],
      "@/hooks/*": [
        "./hooks/*",
        "./src/hooks/*"
      ],
      "@/data/*": [
        "./data/*",
        "./src/data/*"
      ],
      "@/services/*": [
        "./services/*",
        "./src/services/*"
      ],
      "@/utils/*": [
        "./utils/*",
        "./src/utils/*"
      ],
      "@/types/*": [
        "./types/*",
        "./src/types/*"
      ],
      "@/contexts/*": [
        "./contexts/*",
        "./src/contexts/*"
      ],
      "@/providers/*": [
        "./providers/*",
        "./src/providers/*"
      ],
      "@/layouts/*": [
        "./layouts/*",
        "./src/layouts/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
