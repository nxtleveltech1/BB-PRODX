# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env.local and fill in the values
# DO NOT commit .env.local to version control

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Neon PostgreSQL connection string (required)
# Get your connection string from: https://console.neon.tech
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# Shadow database for migrations (optional, Neon-specific)
SHADOW_DATABASE_URL=

# Database connection pool settings (optional, defaults shown)
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=2
DB_IDLE_TIMEOUT=10000
DB_CONNECTION_TIMEOUT=2000
DB_QUERY_TIMEOUT=30000
DB_STATEMENT_TIMEOUT=30000

# Database SSL certificates (optional, for production)
DB_SSL_CA=
DB_SSL_CERT=
DB_SSL_KEY=

# ===========================================
# AUTHENTICATION
# ===========================================

# NextAuth.js configuration (required)
# Generate secret: openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-at-least-32-characters

# JWT configuration (required for legacy/migration)
JWT_SECRET=your-jwt-secret-at-least-32-characters
JWT_REFRESH_SECRET=your-jwt-refresh-secret-at-least-32-characters

# OAuth providers (optional)
# GitHub OAuth - Create app at: https://github.com/settings/developers
# Set Authorization callback URL to: http://localhost:3000/api/auth/callback/github
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth - Create app at: https://console.cloud.google.com/apis/credentials
# Add authorized redirect URI: http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Stack Auth (to be removed after migration)
NEXT_PUBLIC_STACK_PROJECT_ID=
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=

# ===========================================
# STRIPE PAYMENTS
# ===========================================

# Stripe API keys (required for payments)
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_
STRIPE_SECRET_KEY=sk_test_
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_

# Stripe webhook secret (optional, for webhooks)
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_

# ===========================================
# EMAIL & NEWSLETTER
# ===========================================

# Brevo (Sendinblue) - Option 1
# Create an API key at: https://app.brevo.com/settings/keys/smtp
BREVO_API_KEY=
BREVO_LIST_ID=

# Mailchimp - Option 2
# API key should include data center suffix (e.g., abcdef-us17)
MAILCHIMP_API_KEY=
MAILCHIMP_LIST_ID=
MAILCHIMP_SERVER_PREFIX=

# ===========================================
# SECURITY & ANTI-SPAM
# ===========================================

# hCaptcha (optional)
# Get your keys from: https://dashboard.hcaptcha.com
NEXT_PUBLIC_HCAPTCHA_SITEKEY=
HCAPTCHA_SECRET=

# API security (optional)
VALID_API_KEYS=key1,key2,key3

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

# Sentry error tracking (optional, recommended for production)
# Get your DSN from: https://sentry.io
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=
NEXT_PUBLIC_SENTRY_DSN=

# Environment indicator for client-side (development, production)
NEXT_PUBLIC_ENV=development

# ===========================================
# CACHING & PERFORMANCE
# ===========================================

# Redis cache (optional, recommended for production)
# Format: redis://username:password@host:port/db
REDIS_URL=redis://localhost:6379

# ===========================================
# PAYMENT PROVIDERS (OPTIONAL)
# ===========================================

# Paystack (for African markets)
PAYSTACK_SECRET_KEY=
PAYSTACK_WEBHOOK_SECRET=

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server port and host
PORT=8000
HOST=localhost

# API URL for frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Base URL for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ===========================================
# SOCIAL MEDIA & INTEGRATIONS
# ===========================================

# Instagram Basic Display API (required for Social Media Wall)
# Get your access token from: https://developers.facebook.com/apps/
# Create an app → Add Instagram Basic Display → Generate User Token
INSTAGRAM_ACCESS_TOKEN=

# Social media links (public)
NEXT_PUBLIC_SOCIAL_INSTAGRAM=https://instagram.com/yourhandle
NEXT_PUBLIC_SOCIAL_FACEBOOK=https://facebook.com/yourpage
NEXT_PUBLIC_SOCIAL_LINKEDIN=https://www.linkedin.com/company/yourcompany/

# ===========================================
# BUILD & DEPLOYMENT
# ===========================================

# Node environment (development, production, test)
NODE_ENV=development

# Vercel deployment (automatically set)
VERCEL=
VERCEL_ENV=
VERCEL_URL=
VERCEL_GIT_COMMIT_SHA=

# Bundle analysis (optional)
ANALYZE=

# ===========================================
# NOTES
# ===========================================
# 1. Required variables are marked as (required)
# 2. Optional variables can be left empty
# 3. Never commit .env.local to version control
# 4. Use strong, unique secrets for production
# 5. Rotate secrets regularly for security
# 6. Keep this file updated with new variables